<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Farm Dashboard Access Groups -->
        <record id="group_farm_dashboard_access" model="res.groups">
            <field name="name">Farm Dashboard Access</field>
            <field name="category_id" ref="base.module_category_agriculture"/>
            <field name="comment">Basic access to farm dashboard</field>
        </record>
        
        <record id="group_farm_owner" model="res.groups">
            <field name="name">Farm Owner</field>
            <field name="category_id" ref="base.module_category_agriculture"/>
            <field name="implied_ids" eval="[(4, ref('group_farm_dashboard_access'))]"/>
            <field name="comment">Full access to all farm dashboard features</field>
        </record>
        
        <record id="group_farm_manager" model="res.groups">
            <field name="name">Farm Manager</field>
            <field name="category_id" ref="base.module_category_agriculture"/>
            <field name="implied_ids" eval="[(4, ref('group_farm_dashboard_access'))]"/>
            <field name="comment">Operational access to farm dashboard</field>
        </record>
        
        <record id="group_farm_accountant" model="res.groups">
            <field name="name">Farm Accountant</field>
            <field name="category_id" ref="base.module_category_agriculture"/>
            <field name="implied_ids" eval="[(4, ref('group_farm_dashboard_access'))]"/>
            <field name="comment">Financial access to farm dashboard</field>
        </record>
        
        <!-- Record Rules -->
        <record id="rule_farm_dashboard_access_company" model="ir.rule">
            <field name="name">Farm Dashboard Access: Multi-Company</field>
            <field name="model_id" ref="model_farm_dashboard_access"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_farm_dashboard_access'))]"/>
        </record>
        
    </data>
</odoo>