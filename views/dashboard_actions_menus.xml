<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Farm Management Dashboard Actions -->
    
    <!-- Main Dashboard Client Action -->
    <record id="action_farm_management_dashboard_client" model="ir.actions.client">
        <field name="name">Farm Management Dashboard</field>
        <field name="tag">farm_management_dashboard</field>
        <field name="target">current</field>
        <field name="context">{}</field>
    </record>
    
    <!-- Old dashboard list action removed - using new ORM-based client action -->
    
    <!-- Dashboard Menu Items -->
    
    <!-- Main Dashboard Menu Item (replaces existing dashboard) -->
    <menuitem
        id="menu_farm_management_dashboard"
        name="Dashboard"
        parent="farm_management.menu_farm_root"
        action="action_farm_management_dashboard_client"
        sequence="1"/>
    
    <!-- Old dashboard management menu removed -->
    <!-- Alternative Dashboard Menu Item (if needed) -->
    <menuitem
        id="menu_farm_dashboard_alternative"
        name="Advanced Dashboard"
        parent="farm_management.menu_farm_root"
        action="action_farm_management_dashboard_client"
        sequence="2"/>
    
</odoo>
