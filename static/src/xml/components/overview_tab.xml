<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
        
        <t t-name="farm_management_dashboard.OverviewTabTemplate" owl="1">
            <div class="overview-tab">
                
                <!-- KPI Cards Row -->
                <div class="row mb-4">
                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 mb-3">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body p-3">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-primary text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; min-width: 48px;">
                                        <i class="fa fa-leaf"/>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h4 class="mb-1" t-esc="formatNumber(kpis.active_projects)"/>
                                        <small class="text-muted">Active Projects</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 mb-3">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body p-3">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-success text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; min-width: 48px;">
                                        <i class="fa fa-map"/>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h4 class="mb-1" t-esc="formatNumber(kpis.total_area)"/>
                                        <small class="text-muted">Total Area (Ha)</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 mb-3">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body p-3">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-info text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; min-width: 48px;">
                                        <i class="fa fa-dollar"/>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h4 class="mb-1" t-esc="formatCurrency(kpis.total_budget)"/>
                                        <small class="text-muted">Total Budget</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div t-if="canViewFinancials" class="col-xl-3 col-lg-6 col-md-6 col-sm-6 mb-3">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body p-3">
                                <div class="d-flex align-items-center">
                                    <div class="stat-icon bg-warning text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; min-width: 48px;">
                                        <i class="fa fa-line-chart"/>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h4 class="mb-1" t-esc="formatCurrency(kpis.total_profit)"/>
                                        <small class="text-muted">Total Profit</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Quick Actions Section -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-transparent border-0">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-bolt me-2 text-primary"/>
                                    Quick Actions
                                </h5>
                            </div>
                            <div class="card-body">
                                <!-- Quick Actions Buttons -->
                                <div class="d-flex flex-wrap gap-2 mb-3">
                                    <SmartButton t-foreach="quickActions" t-as="action" t-key="action.label"
                                                button="action"
                                                permissions="userPermissions"/>
                                </div>
                                
                                <!-- Smart Actions (Context-Aware) -->
                                <div t-if="smartActions.length > 0" class="d-flex flex-wrap gap-2">
                                    <div class="w-100">
                                        <small class="text-muted">
                                            <i class="fa fa-magic me-1"/>
                                            Smart Actions
                                        </small>
                                    </div>
                                    <SmartButton t-foreach="smartActions" t-as="action" t-key="action.label"
                                                button="action"
                                                permissions="userPermissions"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Main Content Row -->
                <div class="row">
                    
                    <!-- Left Column -->
                    <div class="col-lg-8">
                        
                        <!-- Charts Row -->
                        <div class="row mb-4">
                            <div class="col-md-6 mb-3">
                                <div class="card border-0 shadow-sm">
                                    <div class="card-header bg-transparent border-0">
                                        <h5 class="card-title mb-0">
                                            <i class="fa fa-chart-pie me-2 text-primary"/>
                                            Projects by Stage
                                        </h5>
                                    </div>
                                    <div class="card-body p-3">
                                        <div class="chart-container" style="height: 280px; position: relative;">
                                            <canvas id="projectsStageChart" style="width: 100%; height: 100%;"></canvas>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="card border-0 shadow-sm">
                                    <div class="card-header bg-transparent border-0">
                                        <h5 class="card-title mb-0">
                                            <i class="fa fa-chart-line me-2 text-success"/>
                                            Cost Trends
                                        </h5>
                                    </div>
                                    <div class="card-body p-3">
                                        <div class="chart-container" style="height: 280px; position: relative;">
                                            <canvas id="costTrendsChart" style="width: 100%; height: 100%;"></canvas>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Recent Activities -->
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-transparent border-0">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-clock me-2 text-info"/>
                                    Recent Activities
                                </h5>
                            </div>
                            <div class="card-body p-0">
                                <div t-if="recentActivities.length === 0" class="text-center p-4 text-muted">
                                    <i class="fa fa-inbox fa-2x mb-2"/>
                                    <p class="mb-0">No recent activities</p>
                                </div>
                                <div t-else="" class="list-group list-group-flush">
                                    <div t-foreach="recentActivities" t-as="activity" t-key="activity.id" 
                                         class="list-group-item border-0">
                                        <div class="d-flex align-items-center">
                                            <div class="activity-icon me-3">
                                                <i class="fa fa-leaf text-success"/>
                                            </div>
                                            <div class="activity-content flex-grow-1">
                                                <p class="mb-1" t-esc="activity.description"/>
                                                <small class="text-muted">
                                                    <i class="fa fa-calendar me-1"/>
                                                    <t t-esc="formatDate(activity.date)"/>
                                                    <span class="mx-2">â€¢</span>
                                                    <i class="fa fa-map-marker me-1"/>
                                                    <t t-esc="activity.farm"/>
                                                </small>
                                            </div>
                                            <div t-if="canViewFinancials and activity.cost" class="activity-cost">
                                                <span class="badge bg-light text-dark" t-esc="formatCurrency(activity.cost)"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Right Column -->
                    <div class="col-lg-4">
                        
                        <!-- Alerts -->
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-transparent border-0">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-bell me-2 text-warning"/>
                                    Alerts
                                    <span t-if="alerts.length > 0" class="badge bg-danger ms-2" t-esc="alerts.length"/>
                                </h5>
                            </div>
                            <div class="card-body">
                                <div t-if="alerts.length === 0" class="text-center text-muted">
                                    <i class="fa fa-check-circle fa-2x mb-2 text-success"/>
                                    <p class="mb-0">All systems normal</p>
                                </div>
                                <div t-else="">
                                    <div t-foreach="alerts" t-as="alert" t-key="alert_index" 
                                         t-att-class="'alert ' + getAlertClass(alert.type) + ' alert-sm mb-2'">
                                        <div class="d-flex align-items-start">
                                            <i t-att-class="'fa ' + getAlertIcon(alert.type) + ' me-2 mt-1'"/>
                                            <div class="flex-grow-1">
                                                <strong t-esc="alert.title"/>
                                                <p class="mb-0 small" t-esc="alert.message"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Quick Stats -->
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-transparent border-0">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-tachometer me-2 text-primary"/>
                                    Quick Stats
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="stat-item d-flex justify-content-between align-items-center mb-3">
                                    <span class="stat-label">
                                        <i class="fa fa-dollar text-success me-2"/>
                                        Budget Usage
                                    </span>
                                    <div class="stat-value">
                                        <t t-set="budgetUsage" t-value="kpis.total_budget ? (kpis.total_actual_cost / kpis.total_budget * 100) : 0"/>
                                        <span t-esc="Math.round(budgetUsage)"/>%
                                        <div class="progress mt-1" style="height: 4px;">
                                            <div class="progress-bar bg-success" 
                                                 t-att-style="'width: ' + Math.min(budgetUsage, 100) + '%'"/>
                                        </div>
                                    </div>
                                </div>
                                
                                <div t-if="canViewFinancials" class="stat-item d-flex justify-content-between align-items-center mb-3">
                                    <span class="stat-label">
                                        <i class="fa fa-chart-line text-info me-2"/>
                                        Profit Margin
                                    </span>
                                    <div class="stat-value">
                                        <t t-set="profitMargin" t-value="kpis.total_revenue ? (kpis.total_profit / kpis.total_revenue * 100) : 0"/>
                                        <span t-att-class="getKpiTrendClass(profitMargin)" t-esc="Math.round(profitMargin)"/>%
                                    </div>
                                </div>
                                
                                <div class="stat-item d-flex justify-content-between align-items-center">
                                    <span class="stat-label">
                                        <i class="fa fa-leaf text-primary me-2"/>
                                        Active Projects
                                    </span>
                                    <div class="stat-value">
                                        <span class="badge bg-primary" t-esc="kpis.active_projects || 0"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </t>
        
</templates>


